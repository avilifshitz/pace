<center>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :goal_title , value: session[:goal_title]%>
  <%= f.hidden_field :goal_from , value: session[:goal_from]%>
  <%= f.hidden_field :goal_to , value: session[:goal_to]%>
  <%= f.hidden_field :miles_title , value: session[:miles_title]%>
  <%= f.hidden_field :miles_from , value: session[:miles_from]%>
  <%= f.hidden_field :miles_to , value: session[:miles_to]%>
  
  <div ><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>
  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <%= f.hidden_field :is_goaler , value: true %>
  

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
